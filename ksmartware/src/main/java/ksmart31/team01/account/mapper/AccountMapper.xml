<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ksmart31.team01.account.mapper.AccountMapper">
	<!-- account 리스트 -->
	<resultMap type="ksmart31.team01.domain.Account" id="selectAccountList">
		<result column="account_code" property="accountCode"/>
		<result column="account_name" property="accountName"/>		
		<result column="account_date" property="accountDate"/>
		<result column="member_id" property="memberId"/>
	</resultMap>
	<select id="selectAccountList" resultType="ksmart31.team01.domain.Account" resultMap="selectAccountList">
		select
			account_code
			,account_name			
			,account_date
			,member_id
		from account			
	</select>
	<!-- member_id 리스트-->
	<resultMap type="ksmart31.team01.domain.Member" id="selectMemberIdList">	
		<result column="member_id" property="memberId"/>
	</resultMap>
	<select id="selectMemberIdList"	resultType="ksmart31.team01.domain.Member" resultMap="selectMemberIdList">
		select
			member_id
		from member	
	</select>
	
	<insert id="insertAccount" parameterType="ksmart31.team01.domain.Account">
		insert into
			account
			(account_code
			,account_name
			,account_date
			,member_id)
		values(
			#{accountCode}
			,#{accountName}
			,now()
			,#{memberId})
	</insert>
	
	
</mapper>  